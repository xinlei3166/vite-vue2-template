{
  "name": "vite-vue2-template",
  "version": "1.0.1",
  "description": "vite-vue2-template",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xinlei3166/vite-vue2-template.git"
  },
  "keywords": [
    "vue",
    "vue2",
    "ant-design-vue",
    "typescript",
    "monorepo"
  ],
  "author": "君惜",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks",
    "release": "yunque-release --skipBuild",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^4.0.6",
    "@packages/components": "workspace:*",
    "@packages/hooks": "workspace:*",
    "@packages/lib": "workspace:*",
    "@packages/plugins": "workspace:*",
    "@packages/styles": "workspace:*",
    "@packages/types": "workspace:*",
    "@packages/utils": "workspace:*",
    "@vueuse/components": "^10.0.2",
    "@vueuse/core": "^10.0.2",
    "animate.css": "^4.1.1",
    "ant-design-vue": "^1.7.8",
    "await-to-js": "^3.0.0",
    "axios": "^0.27.2",
    "dayjs": "^1.11.5",
    "echarts": "^5.3.3",
    "js-cookie": "^3.0.1",
    "mitt": "^3.0.0",
    "nanoid": "^4.0.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.6",
    "pinia-plugin-persist": "^1.0.0",
    "qs": "^6.11.0",
    "vue": "^2.7.14",
    "vue-demi": "^0.14.5",
    "vue-echarts": "^6.2.3",
    "vue-router": "^3.6.5",
    "vuedraggable": "^2.24.3",
    "wujie-vue2": "^1.0.5"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.2",
    "@types/mockjs": "^1.0.6",
    "@types/node": "^20.4.5",
    "@types/nprogress": "^0.2.0",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@unocss/postcss": "^0.53.5",
    "@unocss/preset-rem-to-px": "^0.53.5",
    "@vitejs/plugin-vue2": "^2.2.0",
    "@vitejs/plugin-vue2-jsx": "^1.1.0",
    "@vueuse/shared": "^10.2.1",
    "@yunquejs/release": "^0.1.9",
    "@wry-smile/vite-plugin-antd-use-dayjs": "^1.0.1",
    "consola": "^2.15.3",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-vue": "^7.20.0",
    "less": "^3.9.0",
    "less-loader": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mockjs": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "picocolors": "latest",
    "postcss": "^8.4.23",
    "prettier": "^2.7.1",
    "simple-git-hooks": "latest",
    "ssh2-sftp-client": "^9.0.2",
    "tsx": "latest",
    "typescript": "^4.8.2",
    "unocss": "^0.53.5",
    "unplugin-auto-import": "^0.12.2",
    "unplugin-vue-components": "^0.23.0",
    "vite": "^4.3.9",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-style-import": "^2.0.0",
    "vue-eslint-parser": "^7.11.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack",
        "umi",
        "vite"
      ]
    }
  }
}
